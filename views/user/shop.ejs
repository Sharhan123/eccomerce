        .map(category => category.name);

    const categoriesQueryParam = selectedCategories.join(',');
    
    // Update the hidden input field value with the selected categories
    document.getElementById('categoriesQueryParam').value = categoriesQueryParam;
    
    // Submit the form to trigger the filter
    document.getElementById('filter-form').action= '/shop?catagories=categoriesQueryParam';
}

</script>

