<script>

document.addEventListener('DOMContentLoaded', function() {
  // This code will be executed once the DOM content is fully loaded
  const razorpayCount = '<%= pod %>'
  const codCount = '<%= cod %>'
  const walletCount =  '<%= wallet %>'

  renderPaymentMethodChart(razorpayCount, codCount, walletCount);
});

function renderPaymentMethodChart(razorpayCount, codCount, walletCount) {
  const ctx = document.querySelector("#paymentMethodChart").getContext("2d");

  const chart = new Chart(ctx, {
    type: "doughnut",
    data: {
      labels: ["Razorpay", "COD", "Wallet"],
      datasets: [
        {
          data: [razorpayCount, codCount, walletCount],
          backgroundColor: ["#36A2EB", "#FFCE56", "#FF6384"],
        },
      ],
    },
  });
}
</script>


